<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.filter.AuthFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>ColorServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.ColorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BodyServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.BodyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.DownloadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddCarServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.AddCarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowAdvertCarList</servlet-name>
    <servlet-class>ru.job4j.servlet.ShowAdvertCarList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateCarServlet</servlet-name>
    <servlet-class>ru.job4j.servlet.UpdateCarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Exit</servlet-name>
    <servlet-class>ru.job4j.servlet.ExitServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BodyServlet</servlet-name>
    <url-pattern>/bodies.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ColorServlet</servlet-name>
    <url-pattern>/colors.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddCarServlet</servlet-name>
    <url-pattern>/add.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowAdvertCarList</servlet-name>
    <url-pattern>/adList.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateCarServlet</servlet-name>
    <url-pattern>/update.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Exit</servlet-name>
    <url-pattern>/exit.do</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/addAdvert.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/car/edit.jsp</url-pattern>
  </filter-mapping>
</web-app>
